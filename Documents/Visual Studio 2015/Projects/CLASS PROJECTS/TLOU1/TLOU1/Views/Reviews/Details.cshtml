@model TLOU1.Models.Review

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div class="container-fluid">
    <h4>Review</h4>
    <hr />



    <div class="row">
        <div class="col-md-4"></div> @*//columns to move thumbnail to middle of screen*@
        <div class="col-sm-6 col-md-4">
            @*//actual "card" review styling*@
        <div class="thumbnail">
            <div class="caption">
                <h3>@Html.DisplayFor(model => model.Description)</h3> @*//review*@
                <p>@Html.DisplayFor(model => model.MoveInDate): @Html.DisplayFor(model => model.MoveOutDate)</p> @*//dates lived in the SH*@
                <p><em>~ @Html.DisplayFor(model => model.Name)</em></p> @*//user name*@
                
            </div>
        </div>
    </div>
    <div class="col-md-4"></div>@*//columns to move thumbnail to middle of screen*@
</div>
</div>